<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/reply_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preferences_general_header">

        <ListPreference
            app:entries="@array/time_limit_entries"
            app:entryValues="@array/time_limit_values"
            app:key="timer_length"
            app:defaultValue="120"
            app:title="@string/preference_timer_length"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            app:key="vibration_enabled"
            app:title="@string/preferences_vibration"
            app:enabled="true"
            />
</PreferenceCategory>


</PreferenceScreen>