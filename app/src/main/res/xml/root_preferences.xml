<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="@string/preferences_general_header">
        <SwitchPreference
            app:key="choose_timer_value_every_time"
            app:title="@string/preferences_choose_timer_value_at_game_start"
            app:enabled="false"
            />
        <ListPreference
            app:entries="@array/time_limit_entries"
            app:entryValues="@array/time_limit_values"
            app:key="timer_length"
            app:defaultValue="120"
            app:title="@string/preference_timer_length"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreference
            app:key="vibration_enabled"
            app:title="@string/preferences_vibration"
            app:enabled="true"
            />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sound_header">
        <SwitchPreference
            app:key="keypad_sounds"
            app:title="@string/preference_sound_keypad"
            app:enabled="true"
            />
        <SwitchPreference
            app:key="button_sounds"
            app:title="@string/preference_sound_button_press"
            app:enabled="true"
            />
        <SwitchPreference
            app:key="game_sounds"
            app:title="@string/preference_sound_game"
            app:enabled="true"
            />
        <SwitchPreference
            app:key="get_ready_sounds"
            app:title="@string/preference_sound_get_ready"
            app:enabled="true"
            />
    </PreferenceCategory>


</PreferenceScreen>