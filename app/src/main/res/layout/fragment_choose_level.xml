<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_background"
    android:gravity="center"
    android:padding="@dimen/screen_padding"
    android:orientation="vertical"
    tools:context=".view.fragments.ChooseLevelFragment">

        <TextView
            android:id="@+id/chooseLevelHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/choose_level_heading_text_size"
            android:fontFamily="@font/kp_programmer_nbp_3m3x"
            android:autoSizeMaxTextSize="@dimen/choose_level_heading_text_size"
            android:autoSizeMinTextSize="@dimen/choose_level_heading_text_size_min"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:layout_margin="@dimen/title_text_margin"
            android:text="@string/choose_level_heading"
            android:shadowRadius="@integer/text_shadow_radius"
            android:shadowDx="@integer/text_shadow_dx"
            android:shadowDy="@integer/text_shadow_dy"
            android:textColor="?attr/heading_text_color"
            android:shadowColor="?attr/text_shadow_layer_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/levelsScrollView"
            />

    <ScrollView
        android:id="@+id/levelsScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="70dp"
        app:layout_constraintTop_toBottomOf="@+id/chooseLevelHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content"
        style="@style/menuButtonStyle">

            <Button
                android:id="@+id/level1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_text_level_1"
                style="@style/menuButtonStyle"/>

            <Button
                android:id="@+id/level2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_text_level_2"
                style="@style/menuButtonStyle" />
            <Button
                android:id="@+id/level3Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_text_level_3"
                style="@style/menuButtonStyle" />
            <Button
                android:id="@+id/level4Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_text_level_4"
                style="@style/menuButtonStyle" />
            <Button
                android:id="@+id/level5Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_text_level_5"
                style="@style/menuButtonStyle" />
            <Button
                android:id="@+id/level6Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_text_level_6"
                style="@style/menuButtonStyle" />
            <Button
                android:id="@+id/level7Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_text_level_7"
                style="@style/menuButtonStyle" />
            <Button
                android:id="@+id/level8Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_text_level_8"
                style="@style/menuButtonStyle" />
            <Button
                android:id="@+id/level9Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_text_level_9"
                style="@style/menuButtonStyle" />
            <Button
                android:id="@+id/level10Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_text_level_10"
                style="@style/menuButtonStyle" />

        </LinearLayout>
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>