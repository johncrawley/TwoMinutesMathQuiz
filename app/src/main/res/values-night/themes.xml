<resources>
    <style name="Base.Theme.TwoMinutesMathQuiz" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimaryDark">@color/primary_dark</item> <!-- Notification Bar -->

        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="default_question_text_color">@color/default_question_text_color</item>
        <item name="default_answer_text_color">@color/default_answer_text</item>
        <item name="correct_answer_text_color">@color/correct_answer_text</item>
        <item name="incorrect_answer_text_color">@color/incorrect_answer_text</item>
        <item name="time_remaining_text_normal_color">@color/default_time_remaining_text_normal</item>
        <item name="time_remaining_text_warning_color">@color/default_time_remaining_text_warning</item>
        <item name="title_text_shadow_color">@color/title_text_shadow_color</item>
        <item name="title_text_color_1">@color/title_text_1</item>
        <item name="title_text_color_2">@color/title_text_2</item>
        <item name="title_text_color_3">@color/title_text_3</item>
        <item name="title_text_color_4">@color/title_text_4</item>
        <item name="title_text_color_5">@color/title_text_5</item>
        <item name="input_view_normal_color">@color/input_view_normal</item>
        <item name="input_view_pressed_color">@color/input_view_pressed</item>
        <item name="menu_button_style">@style/menuButtonStyle</item>
        <item name="input_button_style">@style/inputButtonStyle</item>
        <item name="input_enter_button_style">@style/enterButtonStyle</item>
        <item name="input_text_background_color">@color/input_text_background</item>
        <item name="input_text_background_outline_color">@color/input_text_background_outline</item>
        <item name="text_shadow_layer_color">@color/text_shadow_layer</item>
        <item name="enter_input_button_background_tint">@color/enter_input_button_background_tint</item>
        <item name="score_normal_color">@color/score_normal</item>
        <item name="score_flash_color">@color/score_flash</item>
        <item name="status_bar_background">@color/status_bar_background</item>
        <item name="background_color_1">@color/layout_background_top</item>
        <item name="background_color_2">@color/layout_background_bottom</item>
        <item name="heading_text_color">@color/heading_text</item>
        <item name="medium_text_color">@color/medium_text</item>
    </style>


    <style name="menuButtonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/menu_button_text</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="backgroundColor">@color/input_button_accent</item>
        <item name="strokeColor">@color/menu_button_outline</item>
        <item name="android:textSize">@dimen/input_button_text_size</item>
        <item name="backgroundTint">@color/menu_button_tint</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="inputButtonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textColor">@color/input_button_text</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundColor">@color/input_button_accent</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:textSize">@dimen/input_button_text_size</item>
        <item name="backgroundTint">@color/input_view_pressed</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="enterButtonStyle" parent="@style/inputButtonStyle">
        <item name="backgroundTint">?attr/enter_input_button_background_tint</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>